{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es2015.Promise", "es6", "es2017", "dom"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "noEmit": true,
    "target": "ESNext",
    "baseUrl": "src",
    "types": [ "jest"],
    "typeRoots": ["./src/types", "node_modules/@types"],
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["src", "**/__tests__/*"],
  "exclude": ["node_modules"]
}